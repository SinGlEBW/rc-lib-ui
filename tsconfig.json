{
  "compilerOptions": {
    "target": "es6",
    "useDefineForClassFields": true,
    "lib": ["ES6", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,


    "noImplicitThis": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,


    "baseUrl": "./",

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,


    // Важные 3 парраметра при билде
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,



    "noFallthroughCasesInSwitch": true,
    // Для теста
    "paths": {
      "@lib/*": ["src/lib/*"],
      // "@mui/material/styles": ["node_modules/@mui/material/styles/index.d.ts"],
      // "@mui/icons-material/*": ["node_modules/@mui/icons-material/*.d.ts"]
    }
  },

 
 
  "include": ["src", "README/Preloaders.stories.tsx"],
  "exclude": ["node_modules", "dist", "src/LibTesting/**/*"],
  /*exclude не убирает файл, а исключает во время билда. */
  // "exclude": ["src/lib/declaration.d.ts"],
  "references": [{
    "path": "./tsconfig.node.json"
  }]
}